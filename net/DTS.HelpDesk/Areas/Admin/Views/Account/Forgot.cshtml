@model DTS.HelpDesk.Areas.Admin.Models.ForgotPasswordViewModel
@{
    Layout = "~/Areas/Admin/Views/Shared/_BlankLayout.cshtml";
    ViewBag.Title = "Forgot your password?";
}

<div class="container">
    <div class="col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">DTS HelpDesk Forgot Password</h3>
            </div>
            <div class="panel-body">

                @using (Html.BeginForm("Forgot", "Account", new { area = "Admin" }, FormMethod.Post, new { @class = "", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <fieldset>
                        <div class="form-group">
                            Enter your email and will send you a password reset link.
                        </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                            <button type="submit" class="btn btn-success">Email Link</button>
                            @Html.ActionLink("Login", "Login", new { controller = "Account", area = "Admin" }, new { @class = "btn" })
                    </fieldset>
                }

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
