@model DTS.HelpDesk.Areas.Admin.Models.ResetPasswordViewModel
@{
    Layout = "~/Areas/Admin/Views/Shared/_BlankLayout.cshtml";
    ViewBag.Title = "Reset password";
}

<div class="container">
    <div class="col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">DTS HelpDesk Password Reset</h3>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("ResetPassword", "Account", new { area = "Admin" }, FormMethod.Post, new { @class = "", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Code)

                    <fieldset>
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
                        </div>

                        <div class="form-group">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                        </div>

                        <div class="form-group">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Password" })
                        </div>
                        <button type="submit" class="btn btn-success">Reset</button>
                    </fieldset>
                }
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
